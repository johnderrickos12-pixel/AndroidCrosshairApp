<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Removed the direct CrosshairView as it's now handled by the service -->
    <!-- <com.chatmonkey.crosshairapp.CrosshairView
        android:id="@+id/crosshairView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/startFloatingCrosshairButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Floating Crosshair" />

        <Button
            android:id="@+id/stopFloatingCrosshairButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Floating Crosshair" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
